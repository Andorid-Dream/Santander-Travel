<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Texto_Titulo_Bienvenida">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/lightcoral</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/airbnbcerealmedium</item>
    </style>

    <style name="Texto_Titulo_Recycler">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/airbnbcerealmedium</item>
    </style>

    <style name="Texto_Normal_Recycler">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/airbnbcerealmedium</item>
    </style>


    <style name="Texto_Titulo">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/airbnbcerealmedium</item>
    </style>

    <style name="Texto_Normal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/airbnbcerealmedium</item>
    </style>

    <style name="Texto_subtitulo" parent="Texto_Normal">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/airbnbcerealmedium</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>